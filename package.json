{
  "name": "next-inject-app",
  "private": true,
  "scripts": {
    "web:build": "turbo --filter=next-inject-web build",
    "web:start": "turbo --filter=next-inject-web start",
    "web:dev": "turbo --filter=next-inject-web dev",
    "cli:dev": "turbo --filter=next-inject dev",
    "cli:build": "turbo --filter=next-inject build",
    "cli:start": "turbo --filter=next-inject start",
    "template:dev": "turbo --filter=next-template dev",
    "template:build": "turbo --filter=next-template build",
    "template:start": "turbo --filter=next-template start",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.3.2",
    "turbo": "^2.0.6",
    "typescript": "^5.5.3"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  }
}
