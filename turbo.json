{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "TURSO_DATABASE_URL",
        "TURSO_AUTH_TOKEN",
        "NEXT_PUBLIC_RECAPTCHA_SITE_KEY",
        "RECAPTCHA_SECRET_KEY",
        "UPSTASH_REDIS_REST_URL",
        "UPSTASH_REDIS_REST_TOKEN",
        "NODEMAILER_EMAIL",
        "NODEMAILER_PASSWORD",
        "AUTH_SECRET",
        "AUTH_GOOGLE_ID",
        "AUTH_GOOGLE_SECRET",
        "STRIPE_PUBLIC_TEST_KEY",
        "STRIPE_SECRET_TEST_KEY",
        "STRIPE_WEBHOOK_TEST_SECRET",
        "STRIPE_WEBHOOK_SECRET",
        "STRIPE_PUBLIC_KEY",
        "STRIPE_SECRET_KEY",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "RESEND_KEY"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "plugin": {
      "dependsOn": ["^build"],
      "cache": false
    }
  }
}
